<div id="site_list" >
<h1>Listing sites</h1>
<table>
  <tr class="list_permalink">
    <th >title</th>
    <th>permalink</th>
    <th>body</th>
    <th>created at</th>
    <th>updated at</th>
  </tr>
<% @sites.each do |site| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td><%= site.title %></td>
    <td><%= site.permalink %></td>
    <td><%= site.body %></td>
    <td><%= site.created_at %></td>
    <td><%= site.updated_at %></td>    
    <td class="list_actions"><%= link_to 'Get info', site %></br>
    <%= link_to 'Edit', edit_site_path(site) %></br>
    <%= link_to 'Delete', site, confirm: 'Are you sure?', method: :delete %></br>
    </td>
  </tr>
<% end %>
</table>
<br />
<%= link_to 'New Site', new_site_path %>

